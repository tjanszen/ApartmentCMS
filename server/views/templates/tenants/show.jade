extends ../../layouts/master
block content
    h3 Tenant Details
    
    button.btn.btn-default
      a(href='/tenants')
        span.glyphicon.glyphicon-chevron-left
    form.trash-form(method='post', action='/tenants/#{tenant._id}/delete')
      button(type='submit').btn.btn-danger
        i.fa.fa-trash-o
    button.btn.btn-info
      span.glyphicon.glyphicon-pencil
    
    .row
      .col-sm-4.col-xs-12.detail-page-col
        img(src='#{tenant.photo}')
        h3 #{tenant.name}
